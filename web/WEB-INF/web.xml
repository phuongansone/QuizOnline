        <servlet-class>servlet.SubjectListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizMetaListServlet</servlet-name>
        <servlet-class>servlet.QuizMetaListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizQuestionServlet</servlet-name>
